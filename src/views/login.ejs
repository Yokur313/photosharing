<section class="card">
  <h2>Admin Login</h2>
  <% if (error) { %>
    <div class="alert"><%= error %></div>
  <% } %>
  <form method="POST" action="/login">
    <label>Admin Password</label>
    <input type="password" name="password" required />
    <button type="submit">Login</button>
  </form>
</section>


