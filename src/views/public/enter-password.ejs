<section class="card">
  <h2>Enter Password</h2>
  <% if (error) { %>
    <div class="alert"><%= error %></div>
  <% } %>
  <form method="post" action="/s/<%= id %>">
    <input type="password" name="password" placeholder="Password" required />
    <button type="submit">Continue</button>
  </form>
</section>


